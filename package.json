{
  "name": "better-gcs",
  "private": true,
  "version": "1.0.0",
  "description": "Local-only Electron app for browsing Google Cloud Storage with a Finder-like UI.",
  "author": "Sho Akiyama (秋山翔)",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "node scripts/dev.mjs",
    "build": "vite build && tsc -p electron/tsconfig.json",
    "start": "electron .",
    "package": "node scripts/package.mjs",
    "typecheck": "tsc -p tsconfig.json --noEmit && tsc -p electron/tsconfig.json --noEmit"
  },
  "dependencies": {
    "@google-cloud/storage": "^7.14.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "electron": "^30.2.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.5.4",
    "vite": "^5.4.1",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.local.bettergcs",
    "productName": "Better GCS Explorer",
    "directories": {
      "app": "dist-app"
    },
    "files": [
      "dist/**",
      "dist-electron/**",
      "node_modules/**",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.utilities"
    }
  }
}
